<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line_item_background"
    android:orientation="vertical">

    <org.septa.android.app.view.TextView
        android:id="@+id/station_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:text="Thorndale"
        android:textColor="#000000"
        android:textSize="20sp"
        app:font="@string/font_roboto_medium" />

    <org.septa.android.app.view.TextView
        android:id="@+id/station_distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="18dp"
        android:text="1.0m"
        android:textColor="#144b88"
        android:textSize="15sp"
        app:font="@string/font_roboto_regular" />
</LinearLayout>