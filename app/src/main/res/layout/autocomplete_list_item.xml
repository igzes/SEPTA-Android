<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/entry_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_item_background"
        android:orientation="vertical">

        <org.septa.android.app.view.TextView
            android:id="@+id/street_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="16dp"
            android:text="1234 Market Street"
            android:textColor="#000000"
            android:textSize="20dp"

            app:font="@string/font_roboto_medium" />

        <org.septa.android.app.view.TextView
            android:id="@+id/city_state_zip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="17dp"
            android:text="Philadelphia, PA 19107"
            android:textColor="#8c8c8c"
            android:textSize="15dp"
            app:font="@string/font_roboto_light" />
    </LinearLayout>

    <ImageView
        android:id="@+id/google_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/powered_by_google_light"
        android:visibility="gone"
        tools:visibility="gone" />
</FrameLayout>