<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/starting_station_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Station"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/starting_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/starting_station_label"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:text="placeholder Starting"
        android:textSize="12pt" />

    <FrameLayout
        android:id="@+id/starting_station_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/starting_station_name"
        android:layout_marginBottom="2dp"
        android:background="@android:color/holo_green_dark" />


    <TextView
        android:id="@+id/destination_station_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/starting_station_divider"
        android:text="Destination Station"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/destination_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_station_label"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:text="placeholder Destination"
        android:textSize="12pt" />

    <FrameLayout
        android:id="@+id/destination_station_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/destination_station_name"
        android:background="@android:color/holo_green_dark" />

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/destination_station_divider"
        android:background="@android:color/darker_gray" />


</RelativeLayout>