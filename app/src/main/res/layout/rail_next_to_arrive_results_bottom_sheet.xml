<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ffffff"
    android:padding="@dimen/activity_vertical_margin"
    app:behavior_hideable="false"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottom_sheet_anchor"
            android:layout_width="179dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#dadada" />

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="#dadada" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_sheet_anchor"
            android:text="Next Trains To Arrive"
            android:textAlignment="center"
            android:textSize="12pt" />

        <ImageView
            android:id="@+id/refresh_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/title_txt"
            android:src="@drawable/ic_refresh_black_24dp" />

        <ListView
            android:id="@+id/lines_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_txt"
            android:layout_marginTop="24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/lines_list_view"
            android:background="#fff6f4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:text="Need to see later trains?"
                android:textStyle="bold"
                android:textColor="#d73a11"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/view_sched_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="14dp"
                android:text="View Schedules"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@id/view_sched_label"
                android:src="@drawable/group_13" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:visibility="gone"
        tool:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>
</FrameLayout>