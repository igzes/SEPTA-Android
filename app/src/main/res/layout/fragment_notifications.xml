<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/manage_notifications_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.septa.android.app.view.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/global_notifications_settings_heading"
                android:textAllCaps="true"
                android:textColor="@color/notification_heading_text_color"
                app:typeface="@string/font_roboto_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <org.septa.android.app.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_notifications"
                        android:textColor="@android:color/black"
                        app:typeface="@string/font_roboto_bold" />

                    <org.septa.android.app.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_notifications_hint"
                        app:typeface="@string/font_roboto_regular" />

                </LinearLayout>

                <Switch
                    android:id="@+id/enable_notifications_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <org.septa.android.app.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/special_announcements"
                        android:textColor="@android:color/black"
                        app:typeface="@string/font_roboto_bold" />

                    <org.septa.android.app.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/special_announcements_hint"
                        app:typeface="@string/font_roboto_regular" />

                </LinearLayout>

                <Switch
                    android:id="@+id/special_announcements_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_marginBottom="1dp">

                <org.septa.android.app.view.TextView
                    android:id="@+id/system_notification_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_right_chevron"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_chevron"
                    android:padding="10dp"
                    android:text="@string/system_notification_settings"
                    android:textColor="@android:color/black"
                    app:typeface="@string/font_roboto_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <org.septa.android.app.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/treat_as_priority"
                        android:textColor="@android:color/black"
                        app:typeface="@string/font_roboto_bold" />

                    <org.septa.android.app.view.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/treat_as_priority_hint"
                        app:typeface="@string/font_roboto_regular" />

                </LinearLayout>

                <Switch
                    android:id="@+id/priority_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.septa.android.app.view.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/manage_notifications_border"
                android:padding="10dp"
                android:text="@string/my_notifications_heading"
                android:textAllCaps="true"
                android:textColor="@color/notification_heading_text_color"
                app:typeface="@string/font_roboto_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <org.septa.android.app.view.TextView
                    android:id="@+id/my_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_right_chevron"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_chevron"
                    android:padding="10dp"
                    android:text="@string/my_notifications"
                    android:textColor="@android:color/black"
                    app:typeface="@string/font_roboto_bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.septa.android.app.view.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/manage_notifications_border"
                android:padding="10dp"
                android:text="@string/notifications_schedule_heading"
                android:textAllCaps="true"
                android:textColor="@color/notification_heading_text_color"
                app:typeface="@string/font_roboto_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <org.septa.android.app.view.TextView
                    android:id="@+id/notifications_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_right_chevron"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_right_chevron"
                    android:padding="10dp"
                    android:text="@string/notifications_schedule"
                    android:textColor="@android:color/black"
                    app:typeface="@string/font_roboto_bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>