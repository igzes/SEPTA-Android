<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dialog_alert_padding">

        <org.septa.android.app.view.TextView
            android:id="@+id/dialog_alert_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:typeface="@string/font_roboto_regular"
            tools:text="Test alert message" />

        <LinearLayout
            android:id="@+id/dialog_alert_dont_show_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dialog_alert_padding">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/dialog_alert_dont_show_again_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <org.septa.android.app.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alert_dismiss_checkbox_label"
                app:typeface="@string/font_roboto_regular" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>