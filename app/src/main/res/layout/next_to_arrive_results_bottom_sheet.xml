<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ffffff"
    app:behavior_hideable="false"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_sheet_anchor"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="#dadada" />

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:background="#dadada" />
        </LinearLayout>

        <org.septa.android.app.view.TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next Trains To Arrive"
            android:textAlignment="center"
            android:textSize="12pt"
            app:font="@string/font_roboto_bold" />


        <ListView
            android:id="@+id/lines_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/title_txt"
            android:layout_weight="20" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/lines_list_view"
            android:layout_weight="1"
            android:background="#fff6f4">

            <org.septa.android.app.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:text="Need to see later trains?"
                android:textColor="#d73a11"
                android:textSize="14sp"
                app:font="@string/font_roboto_bold" />

            <org.septa.android.app.view.TextView
                android:id="@+id/view_sched_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="14dp"
                android:text="View Schedules"
                android:textSize="12sp"
                app:font="@string/font_roboto_regular" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@id/view_sched_label"
                android:src="@drawable/group_13" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/progress_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:visibility="gone"
        tool:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>
</FrameLayout>