<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_page_gradient_background"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.septa.android.app.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.03"
                android:text="The Official App of SEPTA"
                android:textColor="#144b88"
                android:textSize="18sp"
                app:font="@string/font_roboto_bold" />

            <ImageView
                android:layout_width="58dp"
                android:layout_height="57dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/septa_official_logo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#ffffff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <org.septa.android.app.view.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customer_service_gradient_background"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.03"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="App Information"
                android:textColor="#144b88"
                android:textSize="18sp"
                app:font="@string/font_roboto_bold" />

            <org.septa.android.app.view.TextView
                android:id="@+id/build_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="10sp"
                android:text="App Version: 2.0.0
Last App Update: 9/15/2017 04:07 PM
Last Schedule Update: 9/15/207 04:07 PM"
                android:textColor="#144b88"
                android:textSize="14sp"
                app:font="@string/font_roboto_light" />

            <org.septa.android.app.view.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/button_gradient_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.02"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Provide App Feedback"
                android:textColor="#ffffff"
                android:textSize="14sp"
                app:font="@string/font_roboto_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/global_alert_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:elevation="4dp"
                android:orientation="vertical">

                <org.septa.android.app.view.TextView
                    android:id="@+id/attrib_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:drawableRight="@drawable/alert_toggle_closed"
                    android:paddingBottom="21dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="View Attributions"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:font="@string/font_roboto_medium" />

                <ListView
                    android:id="@+id/attrib_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <org.septa.android.app.view.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"

                android:autoLink="web"
                android:letterSpacing="-0.02"
                android:text="Source code to the SEPTA Android application is avaiable under an open source license, but the graphics are not.  The graphics are subject to the following Copyright and Trademark terms: http://septa.org/site/copyright.html.  The source code is available at: https://github.com/septadev/SEPTA-Android."
                android:textColor="#2c2c2c"
                android:textSize="12sp"
                app:font="@string/font_roboto_regular" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>